    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.fooddash.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_salads"
        android:name="com.example.fooddash.ui.salad.SaladFragment"
        android:label="@string/title_salad"
        tools:layout="@layout/fragment_salads" />

    <fragment
        android:id="@+id/navigation_drinks"
        android:name="com.example.fooddash.ui.drinks.DrinkFragment"
        android:label="@string/title_drink"
        tools:layout="@layout/fragment_drinks" />
